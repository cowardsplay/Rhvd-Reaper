# ========================================
# Horizon Forensics Dashboard Environment Variables
# ========================================
# This file contains configuration settings for the Horizon Forensics Dashboard
# Copy this file to .env and update the values with your actual configuration
# 
# IMPORTANT: Never commit this file to version control as it contains sensitive information
# Add .env to your .gitignore file to keep credentials secure

# ========================================
# Server Configuration
# ========================================

# Port number for the backend server to run on
# Default: 3000 (if not specified)
# Example: 3000, 8080, 5000
PORT=3000

# ========================================
# Horizon API Configuration
# ========================================

# Base URL for the Horizon API endpoint
# This should be the full URL to your Horizon API server
# Format: https://your-horizon-server.com or http://your-horizon-server.com
# Example: https://horizon.company.com
# Example: http://192.168.1.100:8080
HORIZON_API_BASE=https://your-horizon-server.com

# ========================================
# Security Configuration
# ========================================

# CORS (Cross-Origin Resource Sharing) settings
# Set to 'true' to enable CORS for all origins (development)
# Set to specific domain for production (e.g., 'https://yourdomain.com')
# Default: true (enabled for all origins)
CORS_ENABLED=true

# ========================================
# Logging Configuration
# ========================================

# Log level for the application
# Options: error, warn, info, debug
# Default: info
LOG_LEVEL=info

# Enable/disable detailed request logging
# Set to 'true' for development, 'false' for production
# Default: true
DEBUG_LOGGING=true

# ========================================
# Optional: Service Account Defaults (for testing)
# ========================================
# These are optional default credentials for testing purposes
# In production, users should enter credentials through the UI
# WARNING: Only use these for development/testing environments

# Default service account username (optional)
# DEFAULT_API_USER=admin

# Default service account password (optional)
# DEFAULT_API_PASS=password

# ========================================
# Notes:
# ========================================
# 1. All values should be strings (no quotes needed unless they contain spaces)
# 2. No spaces around the equals sign
# 3. Lines starting with # are comments and will be ignored
# 4. Empty lines are allowed for readability
# 5. Environment variables are case-sensitive
